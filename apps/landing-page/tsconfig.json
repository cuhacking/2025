{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/components/FrostedGlass.tsx",
    "src/homepage/faqSection/FaqSection.tsx",
    "src/homepage/faqSection/FrequentlyAskedQuestions.tsx",
    "src/homepage/faqSection/faqAccordion/FaqAccordion.tsx",
    "src/homepage/faqSection/faqManager/FaqManager.tsx",
    "src/homepage/faqSection/index.ts",
    "src/homepage/faqSection/types.d.ts",
    "src/homepage/heroSection/EmailSignup.tsx",
    "src/homepage/heroSection/Hero.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
