        }
        pane split_direction="vertical" {
            pane size="50%" {
                pane command="pnpm" name="ğŸŒ€ Portal | 5173 | portal.cuhacking.ca" size="50%" cwd="../" {
                    args "nx" "dev" "portal"
                }
                pane command="pnpm" name="âš™ Axiom (API Layer + Admin Panel) | 8000 | axiom.cuhacking.ca" size="50%" cwd="../" {
                    args "axiom"
