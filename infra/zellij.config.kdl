// https://kdl.dev

theme "gruvbox-dark"

ui {
    pane_frames {
        hide_session_name true
    }
}

layout {
    tab name="ğŸ’ Git" focus=true hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazygit" name="Lazygit" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }

        floating_panes {
            pane command="pnpm" name="ğŸ§¼ Perform a clean install" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "ri"
            }
        }
    }
    tab name="ğŸ›– General" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" {
                pane command="pnpm" name="ğŸŒ€ Portal | 5173 | portal.cuhacking.ca" size="50%" cwd="../" {
                    args "nx" "dev" "portal"
                }
                pane command="pnpm" name="ğŸ¨ Storybook | 6006 | design.cuhacking.ca" size="50%" cwd="../" {
                    args "storybook"
                    start_suspended true
                }
            }
            pane size="50%" {
                pane command="pnpm" name="âœ‰ Email | 5400 | email.cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "email"
                }
                pane command="pnpm" name="ğŸ“š Docs Site | 3000 | docs.cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "docs"
                }
                pane command="pnpm" name="ğŸ•¸ Website | 5800 | cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "website"
                }
                pane name="ğŸ–¼ Slides | 3030 | slides.cuhacking.ca" size="25%" command="pnpm" cwd="../" {
                    args "nx" "dev" "slides"
                    start_suspended true
                }
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }

    }
    tab name="ğŸ‘€ Previews" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
                pane command="browsh" name="Web Browser Preview" cwd="../" {
                    args "http://localhost:8000" "http://localhost:3000" "http://localhost:5173"
                    // args "http://localhost:5400" "http://localhost:61000" "http://localhost:5800" "http://local.drizzle.studio" "http://localhost:3030"
                    start_suspended true
                }
            }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ“ Files" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="yazi" name="Yazi" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
            pane command="pnpm" name="ğŸš¨ WARNING: REMOVE .gitignore FILES INCLUDING .env AND pgdata" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "nuke"
            }
        }
    }
    tab name="ğŸ©º Health" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="btop" name="btop" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ›  Infra" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" {
            pane command="pnpm" name="ğŸ—º Project Graph - Nx | 4211 | graph.cuhacking.ca" size="50%" cwd="../" {
                    start_suspended true
                    args "nx" "graph" "--groupByFolder" "--verbose"
                }
                pane name="PayloadCMS Schema, Typegen, & Importmap" size="50%" command="pnpm" cwd="../" {
                    args "nx" "types" "axiom"
                    start_suspended true
                   }
            }
            pane size="50%" {
                pane command="pnpm" name="ğŸ› Architecture Site | 6400 | arch.cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "arch"
                    start_suspended true
                }
                pane command="pnpm" name="ğŸ“Š Drizzle Studio | local.drizzle.studio" size="25%" cwd="../" {
                    args "nx" "studio" "db"
                }
                pane command="pnpm" name="ğŸ‘€ Schema Visualizer | 5600" size="25%" cwd="../" {
                    args "nx" "visualizer" "db"
                }
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
                pane command="pnpm" name="ğŸ§¹ ESLint Config Inspector | 7777 | eslint.cuhacking.ca" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "inspect"
            }
        }
    }
    tab name="ğŸ’¿ Database" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazysql" name="Lazysql" {
            args "postgres://postgres:password@127.0.0.1:5432/postgres?sslmode=disable"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
               pane command="pnpm" name="ğŸ’¿ Database | 5432 | Nix-PostgreSQL" cwd="../" {
                args "nx" "up" "infra"
            }
        }
    }
    /- tab name="ğŸ§® Network" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="sudo" name="netscanner" {
            args "netscanner"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ”Œ API" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="atac" name="atac" {
            args "--no-ansi-log" "-d" "./atac/collections/"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
                pane command="pnpm" name="âš™ Axiom (API Layer + Admin Panel) | 8000 | axiom.cuhacking.ca" cwd="../" {
                    args "nx" "dev" "axiom"
                }
        }

        }
}
