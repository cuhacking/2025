        }
        pane split_direction="vertical" {

        pane split_direction="horizontal" size="30%" {
            pane size="30%" command="pnpm" name="ğŸ’¿ Database | 5432 | Nix-PostgreSQL" cwd="../" close_on_exit=true {
                args "nx" "up" "infra"
