{
  "name": "infra",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "infra",
  "projectType": "application",
  "targets": {
    "shell": {
      "command": "nix-shell",
      "options": {
        "cwd": "infra"
      },
      "prefixColor": "yellow",
      "color": "green",
      "bgColor": "black",
      "description": "Enter the Nix Shell in infra"
    },
    "up": {
      "command": "nix-shell --argstr DB 'up'",
      "options": {
        "cwd": "infra"
      }
    },
    "down": {
      "command": "nix-shell --argstr DB 'down'",
      "options": {
        "cwd": "infra"
      }
    },
    "destroy": {
      "command": "nix-shell --argstr DB 'destroy'",
      "options": {
        "cwd": "infra"
      }
    },
    "deploy": {
      "command": "pulumi up -e -y",
      "options": {
        "cwd": "infra"
      }
    },
    "preview": {
      "command": "pulumi preview -e -s 'dev'",
      "options": {
        "cwd": "infra"
      }
    }
  }
}
